<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_root_layout"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

    <TextView
            tools:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_title_textview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/list_item_description_textview" android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/list_item_id_textview"
            android:layout_marginStart="12dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            tools:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_description_textview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_title_textview"
            android:layout_marginBottom="8dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@+id/list_item_id_textview" android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_id_textview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="viewEnd" tools:text="10"
            android:textSize="18sp" android:layout_marginStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>